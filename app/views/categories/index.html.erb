<div class="row">
  <div class="col-12">
    <div class="containter-fluid work-description category-box site-title p-3">
      <h1 class="text-center">Paula Ewington's Online Gallery</h1>
    </div>
  </div>
</div>

<div class="row covers">
  <% @categories.each do |category| %>

    <div class="col-sm-6 covers-col">
      <div class="containter-fluid work-description category-box mb-5">
        <h5 class="text-center"><%= category.title %></h5>
        <% if session[:admin] %>
          <%= button_to 'Delete', "/categories/#{category.id}", method: :delete %>
          <%= button_to 'Edit', edit_category_path(category.id), method: :get %>
        <% end %>
      </div>
      <div class="work-cover-wrapper d-flex flex-column align-items-center">
        <div class="work-cover z-depth-5">
          <a href="<%= category_path(category.id) %>" class=""><%= image_tag category.image.url, class: "img-fluid" %></a>
        </div>
      </div>
    </div>

  <% end %>

  <div class="col-sm-6 covers-col">
    <div class="containter-fluid work-description category-box mb-5">
      <h5 class="text-center">About Paula</h5>
    </div>
    <div class="work-cover-wrapper d-flex flex-column align-items-center">
      <div class="work-cover z-depth-5">
        <a href="<%= abouts_path %>" class=""><%= image_tag @about.cover.url, class: "img-fluid" %></a>
      </div>
    </div>
  </div>
</div>
