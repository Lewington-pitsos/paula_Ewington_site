<h1>Gallery</h1>

<ul>
  <% @works.each do |work| %>
    <li>
      <h3>Title: <%= link_to work.title, work_path(work.id) %></h3>
      <br />
      <%= image_tag work.image.url, size: "200x200" %>
      <% if session[:admin] %>
        <%= button_to 'Delete', "/works/#{work.id}", method: :delete %>
        <%= button_to 'Edit', edit_work_path, method: :get %>
      <% end %>
    </li>
  <% end %>
</ul>


<%= link_to 'Categories', categories_path %>
<%= link_to 'About the Artist', about_path %>
<% if session[:admin] %>
  <%= link_to 'upload', new_category_works_path(@id) %>
  <%= button_to 'Sign out', "/admins/#{session[:admin]}", method: :delete %>
<% end %>
