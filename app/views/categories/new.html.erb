<h1>Create new Category</h1>

<%= form_for @category do |f| %>
  <%= f.label 'Category title:' %>
  <%= f.text_field :title %>
  <br />

  <%= f.label 'Category cover image:' %>
  <%= f.file_field :image %>
  <br />

  <%= f.submit 'Create' %>
<% end %>

<%= link_to 'Back to gallery', categories_path %>
