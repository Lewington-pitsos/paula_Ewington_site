<div class="row justify-content-center">
  <div class="col-10">
    <div class="containter-fluid work-description category mb-5">
      <h1 class="text-center artist-name m-0 p-2">Paula Ewington</h1>
    </div>
    <div class="work-image z-depth-5">
      <%= image_tag @about.image.url, class: "img-fluid work"%>
    </div>
  </div>
</div>
<div class="row justify-content-center">
  <div class="col-5">
    <div class="container-fluid work-description about p-0 m-0">
      <button class="btn btn-primary btn-block" type="button" data-toggle="collapse" data-target="#c-artist-statement" aria-expanded="false" aria-controls="c-artist-statement">
        Artist Statament
      </button>
      <div class="collapse" id="c-artist-statement">
        <div class="card card-body">
          <%= @about.statement %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-5">
    <div class="container-fluid work-description about p-0 m-0">
      <button class="btn btn-primary btn-block" type="button" data-toggle="collapse" data-target="#c-artist-bio" aria-expanded="false" aria-controls="c-artist-bio">
        Biography
      </button>
      <div class="collapse" id="c-artist-bio">
        <div class="card card-body">
          <%= @about.bio %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid fixed-bottom slider fadein p-3 text-center">
  <h3><%= link_to "Return Home", categories_path, class: 'nav-link' %></h3>
  <% if session[:admin] %>
    <%= button_to 'Edit Artist info', edit_about_path(1), method: "get" %>
  <% end %>
</div>
