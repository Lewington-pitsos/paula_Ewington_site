<h1>Upload Artwork</h1>

<%= form_for [@category, @work] do |f| %>
  <%= f.label 'Work Name:' %>
  <%= f.text_field :title %>
  <br />

  <%= f.label 'Image:' %>
  <%= f.file_field :image %>
  <br />

  <%= f.label 'Caption:' %>
  <%= f.text_area :caption %>
  <br /><br />

  <%= f.label 'Place:' %>
  <%= f.number_field :place, value: 1 %>
  <br /><br />

  <%= f.submit 'Upload' %>
<% end %>

<%= link_to "Back to #{@category.title}", category_path(@category.id) %>
